@model List<Business.Models.ModelGroupByStore>
@{
    ViewData["Title"] = "Importação";
}

@using (Html.BeginForm("ImportFiles", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="well">
        <table class="table table-striped">
            <tr>
                <td>
                    Selecione os arquivos que deseja importar (<b>.txt</b>):<br />
                    <input type="file" class="btn btn-default btn-lg" id="Archive" name="Archive" multiple />
                </td>
            </tr>
            <tr>
                <td>
                    <div class="col-md-3 float-left" style="padding-left: 0px;">
                        <input type="submit" class="btn btn-primary btn-lg col-md-12" name="submit" value="Importar Arquivos" />
                    </div>
                    @{
                        if (ViewBag.Message != string.Empty)
                        {
                            <div class="col-md-9 float-left p-0">
                                <div class="alert alert-@ViewBag.MessageType" style="min-height: 48px;" role="alert">
                                    @Html.Raw(ViewBag.Message)
                                </div>
                            </div>
                        }
                    }
                </td>
            </tr>
        </table>
    </div>
}
<partial name="~/Views/Home/Partials/PartialImportation.cshtml" model="@Model" />